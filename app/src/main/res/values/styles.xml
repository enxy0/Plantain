<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Text">
        <item name="fontFamily">@font/open_sans</item>
    </style>

    <style name="Text.Primary">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Secondary">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Text.Secondary.Bold">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Title">
        <item name="fontFamily">@font/open_sans_bold</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Text.Header">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Mono" parent="Text.Primary">
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">16dp</item>
        <item name="fontFamily">sans-serif-condensed-medium</item>
    </style>

    <style name="Text.Mono.Small">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="cornerRadius">@dimen/default_radius</item>
        <item name="rippleColor">?attr/colorControlHighlight</item>
        <item name="iconGravity">textStart</item>
        <item name="iconSize">16dp</item>
    </style>

    <style name="AppButton.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">@dimen/default_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconSize">16dp</item>
    </style>

    <style name="AppCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/default_radius</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="AppBottomSheetDialog" parent="Theme.MaterialComponents.DayNight.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppBottomSheetDialogModal</item>
    </style>

    <style name="AppBottomSheetDialogModal" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/AppShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="AppShapeAppearanceBottomSheetDialog">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="DumpPlantainImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">6dp</item>
    </style>

    <style name="ChipDump" parent="Widget.MaterialComponents.Chip.Action">
        <item name="checkedIconVisible">false</item>
        <item name="closeIconVisible">false</item>
        <item name="android:textAppearance">@style/Text.Secondary.Bold</item>
        <item name="rippleColor">@null</item>
        <item name="minTouchTargetSize">0dp</item>
        <item name="android:clickable">false</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="ensureMinTouchTargetSize">false</item>
    </style>

    <style name="AppBottomSheetDialog.ConstantCorners" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppBottomSheetDialogModal.ConstantCorners</item>
    </style>

    <style name="AppBottomSheetDialogModal.ConstantCorners" parent="">  <!-- Don't delete empty parent -->
        <item name="android:background">@drawable/bg_bottom_sheet_constant_corners</item>
    </style>
</resources>